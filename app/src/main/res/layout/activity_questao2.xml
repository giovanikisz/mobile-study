        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="6dp" />

    <CheckBox
        android:id="@+id/chk_arroz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Arroz 1 Kg (R$ 2,69)"
