        tools:layout_editor_absoluteY="69dp" />

    <CheckBox
        android:id="@+id/chk_leite"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Leite longa vida (R$ 2,70)"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="117dp" />

    <CheckBox
        android:id="@+id/chk_carne"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Carne Friboi (R$ 16,70) "
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="165dp" />

    <CheckBox
        android:id="@+id/chk_feijao"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FeijÃ£o carioquinha 1 Kg (R$ 3,38)"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="213dp" />

    <CheckBox
        android:id="@+id/chk_coca"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Refrigerante coca-cola 2 litros (R$3,00)"
        tools:layout_editor_absoluteX="-2dp"
        tools:layout_editor_absoluteY="261dp" />

        <Button
            android:id="@+id/btn_calcular_compra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:onClick="calcular"
            android:text="Calcular Total Compra"
            tools:layout_editor_absoluteX="-2dp"
            tools:layout_editor_absoluteY="329dp" />

    <EditText
        android:id="@+id/compra"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="numberDecimal"
        tools:layout_editor_absoluteX="10dp"
        tools:layout_editor_absoluteY="382dp" />

        <Button
            android:id="@+id/button"
            android:layout_width="120dp"
            android:layout_height="wrap_content"
            android:onClick="telaQuestao3"
            android:text="Q3" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>